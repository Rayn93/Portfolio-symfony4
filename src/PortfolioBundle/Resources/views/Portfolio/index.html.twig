{% extends "PortfolioBundle::base.html.twig" %}

{% block pageTitle %}Robert Saternus - portfolio webdevelopera{% endblock %}

{% block pageDesc %}"Portfolio freelancera - webdevelopera. Tworzenie stron internetowych, wizytówek, portfolia, sklepy internetowe, blogi, aplikacje. Potrzebujesz stworzyć wyjątkową stronę, serwis lub sklep internetowy. Zajrzyj tutaj!"{% endblock %}

{% block stylesheets %}


    <script src="{{ asset('bundles/portfolio/assets/sliderparallax/js/modernizr.custom.28468.js') }}"></script>

    {% stylesheets
        'bundles/portfolio/assets/sliderparallax/css/parallax-slider.css'
        'bundles/portfolio/css/font-awesome.min.css'
        'bundles/portfolio/css/mainpage.css'
        'bundles/portfolio/css/media-queries.css'
        filter = 'cssrewrite'
        output ='assets/css/compiled-main.css'
    %}
     <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
    {% endstylesheets %}

{% endblock %}


{% block pageBody %}
<body class="home">

<div class="cover"></div>

    <header id="home">

        {% include "PortfolioBundle::sticky-header.html.twig" %}

        <div id="imie">
            <h1>Robert Saternus <br /><strong><span>portfolio</span> webdevelopera</strong></h1>
            <a class="button scroll" href="#projekty"> ZOBACZ PROJEKTY  </a>
        </div>

    </header>


    <section id="kim">
        <div class="container">
            <div class="row">
                <div class="omnie col-md-6 col-xs-12">
                    <h2>Kilka słów <span>o mnie</span></h2>
                    <p><span>Web Developer, programista PHP, geofizyk</span>. Na co dzień freelancer, który tworzy strony i serwisy internetowe, co sprawia mu ogromną radość. Głównie specjalizuje się w technologiach <span>back-end-owych</span> ale HTML, CSS i JS nie jest mu również obce. Od czasu do czasu zajmuje się również prostą grafiką</p> <p>W wolnych chwilach podróżuje po świecie, startuje w triathlonach i uwielbia wszystko co zwiększa poziom adrenaliny.</p>

                    <a class="button" href="{{ path('portfolio_cv') }}"> Zobacz moje CV </a>
                </div>

                <div class="col-md-6 col-xs-12">
                    {% image 'bundles/portfolio/img/robert2.jpg' %}
                        <img src="{{ asset_url }}" alt="Robert Saternus" />
                    {% endimage %}
                </div>
            </div>
        </div>
    </section>

    <section id="technologie">
        <div class="container-fluid">
            <div class="row">
                <div class="parallax col-xs-12">
                    <h2><span>Technologie</span>, z którymi pracuję</h2>
                </div>

                <div id="da-slider" class="da-slider">


                    {% for technology in technologies %}
                        <div class="da-slide">
                            <h2>{{ technology.title }}</h2>
                            <p>{{ technology.content|raw }}</p>
                            <div class="da-img button">
                                <img class="img-responsive" src="{{ asset('uploads/technology/' ~ technology.thumbnail )}}" alt="{{ technology.title }}"/>
                            </div>
                        </div>

                    {% endfor %}

                    <nav class="da-arrows">
                        <span class="da-arrows-prev"></span>
                        <span class="da-arrows-next"></span>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <section id="projekty">
        <div class="container">
            <div class="row">
                <div class="parallax col-xs-12">
                    <h2>Moje najnowsze <span>projekty</span></h2>
                </div>

                {% for project in projects %}

                <div class="row row{{ loop.index }}">
                    <div class="col-md-6 computer {{  cycle(["parallax_right", "parallax_left"], loop.index) }} {{ cycle(["col-md-push-6", ""], loop.index) }}">
                        {#{% image 'bundles/portfolio/img/pidsthailand.jpg' %}#}
                        {#<img class="img-responsive" src="{{ asset_url }}" alt="{{ project.title }}"/>#}
                        {#{% endimage %}#}
                        <img class="img-responsive" src="{{ asset('uploads/' ~ project.thumbnail)}}" alt="{{ project.title }}"/>
                    </div>

                    <div class="col-md-6 project_desc {{ cycle(["col-md-pull-6", ""], loop.index)}}">
                        <h3>{{ project.title }}</h3>

                        <p>{{ project.content }}</p>
                        <ul>
                            {% for tag in project.tags %}
                                <li><a href="{{ path('portfolio_projects_tags', {'slug': tag.slug}) }}">{{ tag.name }}</a></li>
                            {% endfor %}
                        </ul>
                        <a class="button" href="{{ project.link }}" target="_blank"> Zobacz projekt </a>
                    </div>
                </div>

                {% if loop.last == false %}
                    <div class="separator">
                        <div class="mask"></div>
                    </div>
                {% endif %}

                {% endfor %}


                <a class="button bigger" href="{{ path('portfolio_projects') }}">Zobacz więcej moich realizacji</a>

            </div>
        </div>
    </section>

    <section id="testimonials">

        <!-- Testimonials -->
        <div class="testimonials-container section-container section-container-image-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 testimonials section-description">
                        <div class="parallax col-xs-12">
                            <h2>Opinie osób, z którymi <span>współpracuję</span> </h2>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 testimonial-list">
                        <div role="tabpanel">
                            <!-- Tab panes -->
                            <div class="tab-content">

                                {% for testimonial in testimonials %}

                                    <div role="tabpanel" class="tab-pane fade in {{ loop.first ? "active" : "" }}" id="tab{{ loop.index }}">
                                        <div class="testimonial-image col-md-3">
                                            <img class="img-responsive" src="{{ asset('uploads/testimonial-authors/' ~ testimonial.avatar )}}" alt="{{ testimonial.author }}"/>
                                            <br />
                                            <p class="testimonial-author">{{ testimonial.author }}</p>
                                            <p class="company">{{ testimonial.role }} <a class href="{{ testimonial.link }}" target="_blank">{{ testimonial.company }}</a></p>
                                        </div>
                                        <div class="testimonial-text col-md-9 ">
                                            <p class="test-long">{{ testimonial.content }}</p>
                                            {% if testimonial.contentShort is not empty %}
                                                <p class="test-short">{{ testimonial.contentShort }}</p>
                                            {% endif %}
                                        </div>
                                    </div>

                                {% endfor %}

                            </div>

                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">

                                {% for testimonial in testimonials %}
                                    <li role="presentation" class="{{ loop.first ? "active" : "" }}">
                                        <a href="#tab{{ loop.index }}" aria-controls="tab{{ loop.index }}" role="tab" data-toggle="tab"></a>
                                    </li>
                                {% endfor %}
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section id="blog">

        <div class="container">
            <div class="row">
                <div class="parallax col-xs-12">
                    <h2>Najnowsze <span>artykuły</span></h2>
                </div>

                <div class="col-lg-4 col-sm-6 article">
                    {% image 'bundles/portfolio/img/slide1.jpg' %}
                        <img class="img-responsive thumbnail" src="{{ asset_url }}" alt="artykuł1">
                    {% endimage %}

                    <div class="parent">
                        <h3>Temat artykułu Temat </h3>
                    </div>
                    <div class="parent2">
                        <p>Jako wolny strzelec, nie muszący opłacać biura czy pracowników, oferuję bardzo konkurencyjne ceny. Specjalizuję się w  systemie Wodpress (tworzenie szablonów, pluginów)</p>
                    </div>
                    <a class="button" href="#">Czytaj więcej</a>

                </div>

                <div class="col-lg-4 col-sm-6 article">
                    {% image 'bundles/portfolio/img/slide3.jpg' %}
                        <img class="img-responsive thumbnail" src="{{ asset_url }}" alt="artykuł1">
                    {% endimage %}
                    <div class="parent">
                        <h3>Temat artykułu Temat artykułu Temat artykułu</h3>
                    </div>
                    <div class="parent2">
                        <p>Jako wolny strzelec, nie muszący opłacać biura czy pracowników, oferuję bardzo konkurencyjne ceny. Specjalizuję się w  systemie Wodpress (tworzenie szablonów, pluginów)</p>
                    </div>
                    <a class="button" href="#">Czytaj więcej</a>
                </div>

                <div class="col-lg-4 hidden-md hidden-sm article">
                    {% image 'bundles/portfolio/img/slide4.jpg' %}
                        <img class="img-responsive thumbnail" src="{{ asset_url }}" alt="artykuł1">
                    {% endimage %}
                    <div class="parent">
                        <h3>Temat artykułu Temat artykułu Temat artykułu</h3>
                    </div>
                    <div class="parent2">
                        <p>Jako wolny strzelec, nie muszący opłacać biura czy pracowników, oferuję bardzo konkurencyjne ceny. Specjalizuję się w  systemie Wodpress (tworzenie szablonów, pluginów). Jako wolny strzelec, nie muszący opłacać biura czy pracowników,</p>
                    </div>
                    <a class="button" href="#">Czytaj więcej</a>
                </div>

            </div>

            <a class="button bigger" href="projekty.html">Zobacz więcej artykułów</a>

        </div>


    </section>

    <section id="wspolpraca">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-6 col-sm-5 hidden-xs"></div>
                <div class="col-lg-4 col-md-6 col-sm-7 col-xs-12">
                    <h2>Zapraszam do współpracy</h2>
                    <p>Jako wolny strzelec, nie muszący opłacać biura czy pracowników, oferuję bardzo konkurencyjne ceny. Specjalizuję się w <span> systemie Wodpress (tworzenie szablonów, pluginów)</span> oraz w <span> tworzeniu aplikacji w Symfony</span>. Wykunuję praktycznie każdy rodzaj stron:<span> wizytówki firm, sklepy internetowe, blogi, portfolia</span> oraz <span>aplikacje webowe.</span> </p>
                </div>
            </div>
        </div>
    </section>

    <section id="kontakt">
        <div class="container">

            {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="feedback_good">
                {{ flashMessage }}
            </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('fail') %}
                <div class="feedback_bad">
                    {{ flashMessage }}
                </div>
            {% endfor %}


            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <h2>KONTAKT</h2>
                    <p><span>email:</span> robert.saternus<span>@</span>gmail.com</p>
                    <p><span>tel:</span> (+48) 791-680-323</p>
                    <p><span>skype:</span> roberto93123</p>
                </div>

                <div class="col-xs-12 col-sm-6">

                    <form class="form-horizontal" method="post" action="{{ path('portfolio_main') }}" novalidate>
                        <div class="form-group">
                            <div class="col-sm-12">
                                {{ form_widget(contactForm.name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_widget(contactForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                {{ form_widget(contactForm.message, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                {{ form_widget(contactForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>
                        {{ form_rest(contactForm) }}
                        <input type="hidden" name="checker" value="1" />
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}


