{% extends 'AdminBundle::base.html.twig' %}

{% block pageTitle %}Lista Opinii {% endblock %}

{% block adminContent %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-default">
                    <div class="panel-heading">Opinie</div>
                    <div class="panel-body">

                        <ul class="nav nav-pills">
                            <li><a class="btn btn-primary" href="{{ path('addTestimonial') }}">Dodaj nową</a></li>
                        </ul>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Autor</th>
                                    <th>Firma</th>
                                    <th class="actions">Akcje</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for testimonial in allTestimonials %}
                                    <tr>
                                        <td>{{ testimonial.id }}</td>
                                        <td><a href="{{ path('addTestimonial', {'id': testimonial.id}) }}">{{ testimonial.author }}</a></td>
                                        <td>{{ testimonial.company }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('addTestimonial', {'id': testimonial.id}) }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                                <a href="{{ path('deleteTestimonial', {'id': testimonial.id}) }}" onclick="return confirm('Na pewno chcesz usunąć tą opinie?')" class="btn btn-danger" data-confirmAction=""><span class="glyphicon glyphicon-trash"></span></a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>

                        {{ knp_pagination_render(allTestimonials, 'PortfolioBundle:Pagination:pagination.html.twig') }}

                    </div>  <!-- .panel-body -->
                </div>  <!-- .panel -->
            </div> <!-- .col-md-12 -->
        </div> <!-- .row -->
    </div> <!-- .container -->

{% endblock %}