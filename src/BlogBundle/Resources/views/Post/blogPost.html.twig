{% extends "PortfolioBundle::base.html.twig" %}

{% block pageTitle %} {{ post.title }} {% endblock %}

{% block pageDesc %}"{{ post.excerpt }}"{% endblock %}


{% block pageBody %}

<body id="blogPost">

<div class="cover"></div>

<header id="projects_menu">

    {% include "PortfolioBundle::sticky-header.html.twig" %}

    <!--Top Imagine for static pages-->
    <div class="container-fluid nopadding">
        <div class="row nomargin">
            <div class="static-top">
                <img class="img-background" src="{{ asset('uploads/blog/' ~ post.thumbnail)}}" alt="{{ post.title }}"/>

                <div class="infoBox">
                    <span>{{ post.publishedDate|date('d-m-Y') }}</span> |
                    <span>{{ post.author }}</span>
                </div>

                <h1>{{ post.title }}</h1>

            </div>
        </div>
    </div>
    <!--END Object top info-->

</header>

<main>
    <div class="container">
        <a class="button pull-left" href="{{ path('blog_list') }}">Powrót do listy artykułów</a>
    </div>


    <article>
        <div class="container simpleArticle">
            <div class="row">
                <div class="col-lg-12">

                    {{ post.content|raw }}

                </div>
            </div>
        </div>
    </article>

    <div class="container">
        <a class="button pull-left mb40" href="{{ path('blog_list') }}">Powrót do listy artykułów</a>
    </div>


</main>

{% endblock %}

{% block scripts %}

    {% javascripts
        'bundles/portfolio/js/jquery-2.1.3.min.js'
        'bundles/portfolio/js/jquery-ui.min.js'
        'bundles/portfolio/js/bootstrap.min.js'
        'bundles/portfolio/js/pace.min.js'
        'bundles/portfolio/js/main_script.js'
        output ='assets/js/compiled-projects.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}